<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <!-- Servlets -->
    <servlet>
        <servlet-name>registrationServlet</servlet-name>
        <servlet-class>ua.kiev.naukma.auth.server.RegistrationServiceImpl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>ua.kiev.naukma.auth.server.LoginServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/Auth/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>registrationServlet</servlet-name>
        <url-pattern>/Auth/register</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>Auth.html</welcome-file>
    </welcome-file-list>

</web-app>
